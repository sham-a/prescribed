<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1DFDA"
    tools:context="com.example.prescribed.addMed.AddMedActivity">


    <Button
        android:id="@+id/addMed_next_name"
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:onClick="nextQuestion"
        android:text="@string/add_med_next_button"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMedText_name" />

    <TextView
        android:id="@+id/addMedQuestion"
        android:layout_width="329dp"
        android:layout_height="42dp"
        android:text="@string/add_med_question0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <EditText
        android:id="@+id/addMedText_name"
        android:layout_width="321dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/add_med_field0"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMedQuestion" />

</androidx.constraintlayout.widget.ConstraintLayout>